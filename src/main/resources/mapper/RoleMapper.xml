<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.example.warehousemanagersystem.service.role.mapper.RoleMapper">
    <sql id="selectSql">
        <if test="id != null and id > 0 ">
            and id = #{id}
        </if>
        <if test="userId != null and userId > 0 ">
            and userId = #{userId}
        </if>

    </sql>
    <select id="getOne" resultType="org.example.warehousemanagersystem.service.role.vo.RoleVO" parameterType="org.example.warehousemanagersystem.service.role.bo.RoleGetBO">

        SELECT * from f_store_role
        where 1 = 1<include refid="selectSql"/>
        limit 1
    </select>
    <select id="getList" resultType="org.example.warehousemanagersystem.service.role.vo.RoleVO" parameterType="org.example.warehousemanagersystem.service.role.bo.RoleGetBO">
        SELECT * from f_store_role
        where 1 = 1<include refid="selectSql"/>
        order by createTime desc

    </select>
</mapper>